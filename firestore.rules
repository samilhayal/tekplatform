rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Tools collection - read for all, write for admin only
    match /tools/{toolId} {
      allow read: if true;  // Herkes okuyabilir
      allow write: if false; // Sadece Admin SDK üzerinden yazılabilir
    }
    
    // Settings collection (prices, admin settings)
    match /settings/{document} {
      allow read: if true;  // Herkes okuyabilir
      allow write: if false; // Sadece Admin SDK üzerinden yazılabilir
    }
    
    // Feedback collection
    match /feedback/{feedbackId} {
      allow read: if false; // Sadece admin okuyabilir
      allow create: if true; // Herkes feedback oluşturabilir
      allow update, delete: if false; // Sadece Admin SDK
    }
    
    // Statistics collection
    match /statistics/{statId} {
      allow read: if false; // Sadece admin
      allow write: if false; // Sadece Admin SDK
    }
  }
}
